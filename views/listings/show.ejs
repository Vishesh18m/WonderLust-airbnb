<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="show-container mt-5">
            <div>
                <h3>
                    <%= listing.title %>
                </h3>
            </div>
            <div class="card show-card" style="width: 35rem;">
                <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="img">
                <div class="card-body">
                    <p class="card-text">
                        <i> Owned by <%= listing.owner.username %></i>
                        <br/>
                        <%= listing.description %> <br>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
                                <%= listing.location %>, <br>
                                    <%= listing.country %> <br>
                    </p>
                </div>

                <% if(currUser && currUser._id.equals(listing.owner._id)) { %>

                    <div class="btns">
                        <a class="btn btn-dark show-btn" href="/listings/<%= listing._id%>/edit">Edit</a>
                        <form method="POST" action="/listings/<%= listing._id%>?_method=DELETE">
                            <button class="btn btn-dark show-btn show-delete-btn">DELETE</button>
                        </form>
                    </div>

                <% } %>
                <hr>
            </div>

            <div class="col-8 offset-0">
                <% if(currUser) { %>
                <h4>Leave a Review</h4>
                <form action="/listings/<%= listing.id %>/reviews" method="post" novalidation
                    class="mb-3 needs-validation">
                    <!-- <div>
                        <label for="rating" class="form-label">Rating</label>
                        <input class="form-range" type="range" min="1" max="5" id="rating" name="review[rating]">
                    </div> -->

                    <label for="rating" class="form-label">Rating</label>

                    <fieldset 
                        class="starability-slot">
                        <input 
                            type="radio" 
                            id="no-rate" 
                            class="input-no-rate" 
                            name="review[rating]" 
                            value="1" 
                            checked 
                            aria-label="No rating." 
                        />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                    <div>
                        <label for="comment" class="form-label">Comments</label>
                        <textarea name="review[comment]" id="comment" cols="60" rows="5" class="form-control form-label"
                            required></textarea>
                    </div>
                    <button class="btn btn-dark" type="submit">Submit</button>
                </form>
                <hr>
                <% } %>
                
                <% if(listing.reviews.length > 0) { %>
                <div class="row review-row">
                    <h4>All reviews</h4>
                    <br></br>

                    <% for(review of listing.reviews) { %>
                        <div class="card col-2 mb-2 review-card">
                            <div class="card-body ">
                                <div class="review-author-profile">
                                    <div class="profile-pic"><%= review.author.username[0] %></div>
                                    <div class="username-star-container">
                                        <p class="card-title review-card-title">@<%= review.author.username %></p>
                                        <p class="starability-result" data-rating="<%= review.rating %>"></p>
                                    </div>
                                    
                                </div>
                                
                                <p class="card-text">
                                    <%= review.comment %>
                                </p>
                                
                                <% if(currUser && currUser._id.equals(review.author._id)) { %>
                                    <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" >
                                        <button class="btn btn-sm btn-dark">DELETE</button>
                                    </form>
                                <% } %>
                            </div>
                        </div>
                    <% } %>
                </div>
                <br></br>
                <% } %>
                
                <div 
                    id="map"
                    data-location="<%= listing.location %>"
                > 
                </div>
                </div>
        </div>
        <script src="/js/map.js"></script>
        <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    </body>

    </html>